<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    tools:context=".ProductCRUDActivity">

    <LinearLayout
        android:id="@+id/product_crud_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/product_product_fragmentContainerView"
            android:name="com.stamford.pos.ProductFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="my_tag"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/show_product_fragmentContainerView2"
            android:name="com.stamford.pos.ShowProductFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>