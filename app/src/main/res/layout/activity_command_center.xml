<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/commandCenterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:text="Command Center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/new_order_btn"
        android:layout_width="303dp"
        android:layout_height="70dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="196dp"
        android:clickable="true"
        android:onClick="onclick_new_order_btn"
        android:text="New Order"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_product_btn"
        android:layout_width="303dp"
        android:layout_height="70dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="292dp"
        android:clickable="true"
        android:onClick="onclick_add_product_btn"
        android:text="Add Product"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/play_music_in_bg_btn"
        android:layout_width="303dp"
        android:layout_height="70dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="388dp"
        android:clickable="true"
        android:onClick="onclick_play_music_in_bg_btn"
        android:text="Play music"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stop_music_in_bg_btn"
        android:layout_width="303dp"
        android:layout_height="70dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="488dp"
        android:clickable="true"
        android:onClick="onclick_stop_music_in_bg_btn"
        android:text="Stop music"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>